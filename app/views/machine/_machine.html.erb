<% Machine.all.each do |machine| %>
   <div class="col-md-4">
     <div class="card mb-4 shadow-sm">
         <div class="card-body">
           <h3 class="card-title"> <%= machine.title %> </h3>
             <p class="card-text"> <%= machine.description %></p>
             <p class="card-text"> Author: <%= machine.author %> Platform: <%= machine.platform %></p>
             <div class="d-flex justify-content-between align-items-center">
               <div class="btn-group">
               <% if current_user.level < 10 %>
		 <a class="btn btn-sm btn-danger text-white" > Lvl Insufficient </a>
               <% else %>
                 <a class="btn btn-sm btn-success text-white" href="<%= machine.link %>">Download</a>
               <% end %>
               </div>
                <small class="text-active">Difficulty: <%= machine.difficulty %> </small>
             </div>
            </div>
          </div>
        </div>
<% end %>
